<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20px"
    android:background="#2B2B2B" >
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#f6aa3e"
        android:text="失物名称"/>
    <TextView 
    	android:layout_width="fill_parent"
    	android:layout_height="2dp"
    	android:background="#e79429"/>
    
    <EditText
        android:id="@+id/plg_lostgoodsname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_marginTop="5dp"
        android:gravity="top" 
        android:padding="10dp"
        android:textSize="18sp"
        android:minLines="1"      
        android:background="@drawable/edittext_bg"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#f6aa3e"
        android:text="失物的特征信息描述"/>
    <TextView 
    	android:layout_width="fill_parent"
    	android:layout_height="2dp"
    	android:background="#e79429"/>
    
    <EditText
        android:id="@+id/plg_lostgoodsdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:gravity="top" 
        android:padding="10dp"
        android:textSize="18sp"
        android:minLines="3"  
        android:background="@drawable/edittext_bg"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#f6aa3e"
        android:text="拾取失物地点"/>
    <TextView 
    	android:layout_width="fill_parent"
    	android:layout_height="2dp"
    	android:background="#e79429"/>
    
    <EditText
        android:id="@+id/plg_lostgoodsplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_marginTop="10dp"
        android:gravity="top" 
        android:padding="10dp"
        android:textSize="18sp"
        android:minLines="1"  
        android:background="@drawable/edittext_bg"/>
    
    <TextView 
    	android:layout_width="fill_parent"
    	android:layout_height="2dp"
    	android:background="#e79429"
    	android:layout_marginTop="10dp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#f6aa3e"
        android:text="失物类别"/>
        <Spinner
        android:id="@+id/plg_SpinnerLostGoodsCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp" />
    </LinearLayout>
    
    <TextView 
    	android:layout_width="fill_parent"
    	android:layout_height="2dp"
    	android:background="#e79429"
    	android:layout_marginTop="10dp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#f6aa3e"
        android:text="拾取失物时间"/>
        
        <Button
            android:id="@+id/plg_losttime"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"      
            android:gravity="center"
            android:background="@drawable/button"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:text="设置时间"/>
       
    </LinearLayout>

    
  
</LinearLayout>

