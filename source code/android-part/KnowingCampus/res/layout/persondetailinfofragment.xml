<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1ece7">
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1ece7"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.android.volley.toolbox.NetworkImageView 
        	android:id="@+id/persondetailfragment_image"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
      
        <TextView 
            android:id="@+id/persondetailfragment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="25sp"
            android:text="Laughing"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="专业 "/>
        <TextView 
        android:id="@+id/persondetailfragment_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:textSize="16dp"
        android:textColor="#aaa"
        android:text="软件工程"/>
    </LinearLayout>
    
    <TextView 
    	android:layout_width="fill_parent"
    	android:layout_height="0.1dp"
    	android:background="#C0C0C0"
    	android:layout_marginTop="10dp"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="入学年份 "/>
        <TextView 
        android:id="@+id/persondetailfragment_enteryear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textSize="16dp"
        android:textColor="#aaa"
        android:text="2012"/>
    </LinearLayout>
    
    <TextView 
    	android:layout_width="fill_parent"
    	android:layout_height="0.1dp"
    	android:background="#C0C0C0"
    	android:layout_marginTop="10dp"/>
    
  <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="个性签名 "/>
        <TextView 
        android:id="@+id/persondetailfragment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textSize="16dp"
        android:textColor="#aaa"
        android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"/>
    </LinearLayout>
    
    <TextView 
    	android:layout_width="fill_parent"
    	android:layout_height="0.1dp"
    	android:background="#C0C0C0"
    	android:layout_marginTop="10dp"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:textColor="#e79429"
        android:text="联系方式 "/>
    <TextView 
    	android:layout_width="fill_parent"
    	android:layout_height="0.1dp"
    	android:background="#C0C0C0"
    	android:layout_marginTop="10dp"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="QQ"/>
        <TextView 
        android:id="@+id/persondetailfragment_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:textSize="16dp"
        android:textColor="#aaa"
        android:text="1534442199"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="e-mail"/>
        <TextView 
        android:id="@+id/persondetailfragment_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textSize="16dp"
        android:textColor="#aaa"
        android:text="zy084232@163.com"/>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp">
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Phone"/>
        <TextView 
        android:id="@+id/persondetailfragment_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:textSize="16dp"
        android:textColor="#aaa"
        android:text="15679167436"/>
    </LinearLayout>
    
    <Button  
        android:id="@+id/persondetailfragment_changeinfo"  
        android:layout_width="match_parent"  
        android:layout_height="45dp" 
        android:layout_marginTop="15dp"           
        android:background="@drawable/button"  
        android:text="修改个人信息"  
        android:textColor="#ffffff"  
        android:textSize="20sp" />

</LinearLayout>
</ScrollView>