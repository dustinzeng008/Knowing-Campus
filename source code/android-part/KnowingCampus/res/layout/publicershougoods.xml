<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20px"
    android:background="#2B2B2B" >
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#f6aa3e"
        android:text="物品名称"/>
    <TextView 
    	android:layout_width="fill_parent"
    	android:layout_height="2dp"
    	android:background="#e79429"/>
    
    <EditText
        android:id="@+id/perg_ershougoodsname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_marginTop="5dp"
        android:gravity="top" 
        android:padding="10dp"
        android:textSize="18sp"
        android:minLines="1"      
        android:background="@drawable/edittext_bg"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#f6aa3e"
        android:text="物品详细信息"/>
    <TextView 
    	android:layout_width="fill_parent"
    	android:layout_height="2dp"
    	android:background="#e79429"/>
    
    <EditText
        android:id="@+id/perg_ershougoodsdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:gravity="top" 
        android:padding="10dp"
        android:textSize="18sp"
        android:minLines="3"  
        android:background="@drawable/edittext_bg"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#f6aa3e"
        android:text="物品价格(元)"/>
    <TextView 
    	android:layout_width="fill_parent"
    	android:layout_height="2dp"
    	android:background="#e79429"/>
    
    <EditText
        android:id="@+id/perg_ershougoodsprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_marginTop="10dp"
        android:gravity="top" 
        android:padding="10dp"
        android:textSize="18sp"
        android:minLines="1"  
        android:background="@drawable/edittext_bg"/>
    
    <TextView 
    	android:layout_width="fill_parent"
    	android:layout_height="2dp"
    	android:background="#e79429"
    	android:layout_marginTop="10dp"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#f6aa3e"
        android:text="物品类别"/>
        <Spinner
        android:id="@+id/perg_SpinnerErShouGoodsCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp" />
    </LinearLayout>
   
</LinearLayout>

